<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
    <ol>
        <li><a href="@Url.Action("Index")" title="Home" >Home</a></li>
        <li><a href="@Url.Action("About")" title="About" onclick="loading('about'); return false; " >About</a></li>
        <li><a href="@Url.Action("Contact")" title="Contact" onclick="loading('contact'); return false; " >Contact</a></li>
    </ol>

    <div id="content">
        @RenderBody()
    </div>

    <script type="text/javascript">

        function loading(action) {
            var url;

            // this could be improved, just using it as an easy example
            switch (action) {
                case "about":
                    url = "@Url.Action("About")";
                    break;
               case "contact":
                    url = "@Url.Action("Contact")";
                    break;
            }

            $.ajax({
                url: url,
                success: function (data) {
                    $('#content').html(data);
                }
            });

            return false;
        }

    
    </script>

</body>
</html>
